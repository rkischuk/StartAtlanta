<html>
  <head>
    <!-- Remote jQuery with local fallback; taken from HTML5 Boilerplate http://html5boilerplate.com -->
    <!-- jQuery version might not be the latest; check jquery.com -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"></script>
    <script>!window.jQuery && document.write(unescape('%3Cscript src="js/jquery-1.4.4.min.js"%3E%3C/script%3E'))</script>
    <script>
      var runCount = 0;    
      function timerMethod() {
        runCount++;
        if(runCount > 12) {
          clearInterval(loadTimer);
          alert("Unable to load your friends at this time. Please check back later.");
        }
        $.ajax({
          url: "/matches/ready",
          success: function(data){
            if (data.ready_to_match) {
              window.location.href="/matches/";
            }
          }
        });
      }
      var loadTimer = setInterval(timerMethod, 5000);
    </script>
  </head>
<body style="text-align: center; width: 720px; font-family: Lucida Sans Unicode, Lucida Grande, sans-serif">
  <div style="width: 240px; height: 150px; margin-left: 240px; text-align: center; border: 5px solid #172154; margin-top: 100px; padding-top: 10px; padding-bottom: 10px; -moz-border-radius: 10px;  border-radius: 10px;">
    <img src="/images/logo.png" style="width: 200px" /><br />
    <img src="/images/loading.gif" style="padding: 12px"/><br />
    Loading your contacts<br />

  </div>

</body>
</html>