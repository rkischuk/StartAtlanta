<h1>Listing users</h1>

<table>
  <tr>
    <th>Fb</th>
    <th>Name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Locale</th>
    <th>Birthday</th>
    <th>Gender</th>
    <th>Last retrieved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.fb_id %></td>
    <td><%= user.name %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.locale %></td>
    <td><%= user.birthday %></td>
    <td><%= user.gender %></td>
    <td><%= user.last_retrieved %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

